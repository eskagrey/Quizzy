<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iak.saifulka.quizzy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/eg_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.iak.saifulka.quizzy.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iak.saifulka.quizzy.Quiz1Activity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:label="Skor"
            android:name="com.iak.saifulka.quizzy.ScoreActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:label="Penjelasan"
            android:name="com.iak.saifulka.quizzy.ExplanationActivity"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>